type Book {
	id: ID!
	title: String!
	genre: String
	author: Author
}

extend type Query {
	bookById(id: Long!): Book!
	findAllBooks: [Book]!
}

extend type Mutation {
	createBook(title: String!, genre: String, author: ID!): Book!
	updateBook(id: ID!, title: String, genre: String): Book!
	deleteBook(id: ID!): Boolean
}